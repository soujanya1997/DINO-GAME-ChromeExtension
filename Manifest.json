{
	"manifest_version": 2,
	"name": "Handy Extension",
	"description": "A hack to make life easier",
	"version": "1.0",
	"icons":{
		"128":"128.png",
		"48": "48.png",
		"16": "16.png"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["content.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "ct.png",
		"default_popup": "popup.html"
	}
} 